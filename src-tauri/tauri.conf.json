{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wid",
  "version": "0.1.0",
  "identifier": "com.xmimu.wid",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "wid - Wwise ID 查询工具",
        "width": 800,
        "height": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright © 2025 xmimu",
    "category": "DeveloperTool",
    "shortDescription": "Wwise ID查询工具",
    "longDescription": "高效的 Wwise 音频资源 ID 查询和管理工具",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      }
    }
  }
}
